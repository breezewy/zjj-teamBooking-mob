.idCard-enter-container
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #efeff4
  .header
    position: relative;
    height: 40px;
    line-height: 40px;
    text-align: center;
    background-color: #edf0f4;
    box-shadow: 0 1px 6px #ccc;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    z-index: 5;
    h1
      font-size: 16px
      font-weight: 700;
    .cubeic-back
      position: absolute;
      top: 0;
      left: 0;
      padding: 0 15px;
      color: #1c9ae7;
      font-size: 16px
  .wrapper
    position relative
    height: calc(100% - 40px)
    overflow-x: hidden
    overflow-y: auto
    .upload-mask
      position absolute
      z-index:10
      top:0
      left:0
      height 100px;
      width: 100%;
    .add_btn
      margin 24px 0
      width: 60%
      .card_btn
        margin :18px auto
        text-align center
        height 40px
        line-height 39px;
        border-radius:13px
        border:1px solid #1c9ae7
        color: #1c9ae7
        letter-spacing :1px;
        .card_txt
          display: inline-block
          margin-left -6px;
          font-size .75rem
        .icon-tianjia
          font-weight :600
    .edit_list
      margin-top: .25rem
      .edit_item
        position: relative;
        border-bottom: 1px solid #e9e9e9;
        background-color: #fff;
        padding: .4rem 0 .4rem .75rem;
        label
          display: inline-block;
          width: 25%;
          font-size: .75rem;
        .list_in
          width: auto;
          height: 1.2rem;
          text-indent: .2rem;
          font-size: .7rem;
        .select-cerType
          outline:none
          border: none;
          background-color: transparent;
          border-radius: 0;
          box-shadow: none;
          display: inline-block;
          width 60%
          padding: 0;
          margin: 0;
          line-height: normal;
          color: #424242;
          font-size: 0.7rem;
          font-family: inherit;
          box-sizing: border-box;
          -webkit-user-select: text;
          user-select: text;
          -webkit-appearance: none;
          appearance: none;
        .triangle_border_right
          width:0;
          height:0;
          border-width:6px 0 6px 15px;
          border-style:solid;
          border-color:transparent transparent transparent #1c9ae7;/*透明 透明 透明 灰*/
          position:absolute;
          right 20px;
          top:18px
    .edit_btn
      margin 40px 0
      .order_btn
        width :60%
        margin :18px auto
        text-align center
        height 40px
        line-height 39px;
        border-radius:13px
        background-color: #1c9ae7
        color: #fff
        .on_add
          display: inline-block
          font-size .75rem
        .on_complete
          display: inline-block
          font-size .75rem







